<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:gravity="center"
    android:padding="@dimen/def_padding_margin_5D"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/im_eva_first"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@mipmap/ic_eva_attitude" />

    <TextView
        android:id="@+id/tv_eva_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/def_padding_margin_5D"
        android:textColor="@color/clo_dark_gray"
        android:text="教学态度" />

</LinearLayout>

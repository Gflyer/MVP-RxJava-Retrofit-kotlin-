<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:elevation="@dimen/def_padding_margin_5D"
        app:cardCornerRadius="@dimen/def_padding_margin_15D">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_eva_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="校督导评价"
                    android:textColor="@color/clo_status_light_green"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_eva_per"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(25%)"
                    android:textColor="@color/clo_status_light_green"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/def_padding_margin_25D"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="教学态度(20)"
                    android:textColor="@color/clo_dark_gray"
                    android:textSize="16sp" />

                <View
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/def_padding_margin_20D"
                    android:background="@color/clo_dark_gray" />


                <TextView
                    android:id="@+id/tv_tea_attitude_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/def_padding_margin_30D"
                    android:text="20"
                    android:textColor="@color/clo_dark_gray"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="教学内容(20)"
                    android:textColor="@color/clo_dark_gray"
                    android:textSize="16sp" />

                <View
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/def_padding_margin_20D"
                    android:background="@color/clo_dark_gray" />


                <TextView
                    android:id="@+id/tv_tea_content_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/def_padding_margin_30D"
                    android:text="20"
                    android:textColor="@color/clo_dark_gray"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="教学方法(30)"
                    android:textColor="@color/clo_dark_gray"
                    android:textSize="16sp" />

                <View
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/def_padding_margin_20D"
                    android:background="@color/clo_dark_gray" />


                <TextView
                    android:id="@+id/tv_tea_method_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/def_padding_margin_30D"
                    android:text="30"
                    android:textColor="@color/clo_dark_gray"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="教学效果(20)"
                    android:textColor="@color/clo_dark_gray"
                    android:textSize="16sp" />

                <View
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/def_padding_margin_20D"
                    android:background="@color/clo_dark_gray" />


                <TextView
                    android:id="@+id/tv_tea_effect_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/def_padding_margin_30D"
                    android:text="20"
                    android:textColor="@color/clo_dark_gray"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="教学秩序(10)"
                    android:textColor="@color/clo_dark_gray"
                    android:textSize="16sp" />

                <View
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/def_padding_margin_20D"
                    android:background="@color/clo_dark_gray" />


                <TextView
                    android:id="@+id/tv_tea_order_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/def_padding_margin_30D"
                    android:text="10"
                    android:textColor="@color/clo_dark_gray"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/def_padding_margin_20D"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/def_padding_margin_20D"
                    android:text="总分"
                    android:textColor="@color/clo_status_light_green"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="50dp"
                    android:layout_height="1dp"

                    android:background="@color/clo_dark_gray" />

                <TextView
                    android:id="@+id/tv_tea_total_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/def_padding_margin_20D"
                    android:text="100"
                    android:textColor="@color/clo_dark_gray"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

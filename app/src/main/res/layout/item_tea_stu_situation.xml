<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_tea_manager_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/clo_dark_gray"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_tea_manager_institute"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="计算机工程系"
        android:textColor="@color/clo_dark_gray"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_tea_manager_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="吴艳波"
        android:textColor="@color/clo_dark_gray"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_tea_manager_course"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:text="安卓开发"
        android:textColor="@color/clo_dark_gray"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_tea_manager_avg_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center"
        android:paddingRight="@dimen/def_padding_margin_5D"
        android:text="100"
        android:textColor="@color/clo_dark_gray"
        android:textSize="16sp" />

</LinearLayout>

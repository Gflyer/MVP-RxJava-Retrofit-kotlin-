<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/def_padding_margin_10D"
        android:layout_marginLeft="@dimen/def_padding_margin_15D"
        android:layout_marginRight="@dimen/def_padding_margin_15D"
        android:layout_marginTop="@dimen/def_padding_margin_10D"
        android:elevation="@dimen/def_padding_margin_5D"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_teach_task_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/clo_dark_gray"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_teach_task_course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/def_padding_margin_15D"
                    android:layout_marginTop="@dimen/def_padding_margin_10D"
                    android:text="Java开发"
                    android:textColor="@color/clo_status_dark_green"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_teach_task_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/def_padding_margin_20D"
                    android:layout_marginTop="@dimen/def_padding_margin_5D"
                    android:text="小红帽"
                    android:textColor="@color/clo_default_gray"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_teach_task_term"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/def_padding_margin_10D"
                android:layout_weight="2"
                android:gravity="bottom"
                android:text="---2017-2018-1"
                android:textColor="@color/clo_default_gray"
                android:textSize="15sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
